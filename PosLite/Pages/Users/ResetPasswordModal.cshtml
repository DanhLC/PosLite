@page
@model PosLite.Pages.Users.ResetPasswordModalModel
@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title"><i class="bi bi-key me-2"></i>Đặt lại mật khẩu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="small text-secondary mb-2">Người dùng: <strong>@Model.Email</strong></div>

    <form hx-post="/Users/ResetPasswordModal?id=@Model.Id"
          hx-target="#resetPwdModalContent" hx-swap="innerHTML" asp-antiforgery="true">

        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu mới</label>
            <div class="input-group">
                <input asp-for="M.NewPassword" type="password" class="form-control" />
                <button type="button" class="btn btn-outline-secondary" id="tp1"><i class="bi bi-eye"></i></button>
            </div>
            <span class="text-danger small" asp-validation-for="M.NewPassword"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Nhập lại mật khẩu mới</label>
            <div class="input-group">
                <input asp-for="M.ConfirmPassword" type="password" class="form-control" />
                <button type="button" class="btn btn-outline-secondary" id="tp2"><i class="bi bi-eye"></i></button>
            </div>
            <span class="text-danger small" asp-validation-for="M.ConfirmPassword"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
            <button class="btn btn-primary" type="submit">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
          function toggle(id, sel){
            const b=document.getElementById(id), i=document.querySelector(sel);
            if(!b||!i) return;
            b.addEventListener('click', ()=>{
              const show=i.type==='password'; i.type = show?'text':'password';
              const ic=b.querySelector('i'); ic?.classList.toggle('bi-eye'); ic?.classList.toggle('bi-eye-slash');
            });
          }
          toggle('tp1','[name="M.NewPassword"]');
          toggle('tp2','[name="M.ConfirmPassword"]');
        })();
    </script>
}
@if (!ViewData.ModelState.IsValid)
{
    <script>window.appToast?.err('Vui lòng kiểm tra lại các trường.');</script>
}
