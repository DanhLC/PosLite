@page
@model PosLite.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign in";
    Layout = "/Pages/Shared/_AuthLayout.cshtml";
}

<div class="card shadow-sm auth-card w-100">
    <div class="card-body p-4 p-md-5">
        <h1 class="h3 fw-semibold text-center mb-4">Sign in to our platform</h1>

        <form method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label small text-secondary"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Input.Password" class="form-label small text-secondary"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>
                <a class="small text-secondary text-decoration-none disabled" tabindex="-1">Lost password?</a>
            </div>

            <button type="submit" class="btn btn-dark w-100 py-2">Sign in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
