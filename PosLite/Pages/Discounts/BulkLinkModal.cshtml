@page
@model PosLite.Pages.Discounts.BulkLinkModalModel
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title"><i class="bi bi-people me-2"></i>Liên kết hàng loạt</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form hx-post="/Discounts/BulkLinkModal"
          hx-target="#bulkModalContent" hx-swap="innerHTML" asp-antiforgery="true">

        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

        <div class="mb-3">
            <label class="form-label">Sản phẩm</label>
            <select asp-for="M.ProductId"
                    class="form-select select-enhanced"
                    placeholder="Chọn sản phẩm"
                    data-search="true"
                    data-allow-clear="true"
                    data-autosubmit="false">
                <option value="">Tất cả</option>
                @foreach (var p in Model.Products)
                {
                    <option value="@p.Id">@p.Name</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="M.ProductId"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Phần trăm</label>
            <div class="input-group">
                <input asp-for="M.Percent" step="0.01" class="form-control" />
                <span class="input-group-text">%</span>
            </div>
            <span class="text-danger" asp-validation-for="M.Percent"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Chọn khách hàng</label>
            <select asp-for="M.CustomerIds"
                    class="form-select select-enhanced"
                    multiple
                    placeholder="Gõ để tìm khách hàng..."
                    data-search="true"
                    data-allow-clear="true">
                <option value="">Tất cả</option>
                @foreach (var c in Model.Customers)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
            <span class="text-danger" asp-validation-for="M.CustomerIds"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
            <button class="btn btn-primary" type="submit">Lưu</button>
        </div>
    </form>
</div>

@if (!ViewData.ModelState.IsValid)
{
     <script>window.appToast?.err('Vui lòng kiểm tra lại các trường.');</script>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
